{
    "extends": "./tsconfig.json",
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    },
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "*.js",
        "*.ts*",
        "**/*.ts*",
        "**/*.spec.ts*"
    ],
    "exclude": [
        "node_modules"
    ]
}
